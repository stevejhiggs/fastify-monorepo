{
  "name": "example-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/listener.js",
  "type": "module",
  "scripts": {
    "dev": "node --import tsx --watch-path=./src ./index.ts | pino-pretty ",
    "start:production": "node --enable-source-maps ./.dist/index.js",
    "build": "tsdown",
    "test": "LOG_LEVEL=warn node --test --import tsx ./src/**/*.test.ts",
    "test:ci": "LOG_LEVEL=warn node --test --experimental-test-coverage --import tsx ./src/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "lint:ci": "biome check ./src",
    "lint": "pnpm run lint:ci --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@repo/fastify-swagger": "workspace:*",
    "@repo/logging": "workspace:*",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:tooling",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:tooling",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.2",
    "tsdown": "catalog:tooling",
    "tsx": "catalog:tooling",
    "typescript": "catalog:tooling"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
